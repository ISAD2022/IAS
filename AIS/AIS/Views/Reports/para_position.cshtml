@{
    ViewData["Title"] = "Report ~ Para Position Analysis";
    Layout = "_Layout";
}

<script type="text/javascript">
    function getrelation(parentEntityId = 0, userEntityId = 0) {


        $('#controlingsearch').empty();
        $('#childposting').empty();
        if ($('#RelationshipField option:selected').val()==0)
        return;
        $.ajax({
            url: "/ApiCalls/getparentrelForParaPositionReport",
            type: "POST",
            data: {
                'ENTITY_REALTION_ID': $('#RelationshipField option:selected').val()
            },


            cache: false,
            success: function (data) {


                $('#controlingsearch').append('<option id="0" value="0">--Select Controlling/Reporting Office--</option>');
                $.each(data, function (index, contof) {

                    var selected = '';
                    if (contof.entitY_ID == parentEntityId)
                        selected = 'selected="selected"';

                    $('#controlingsearch').append('<option ' + selected + ' value="' + contof.entitY_ID + '" id="' + contof.entitY_REALTION_ID + '">' + contof.description + '</option>')
                });
                if (userEntityId != 0)
                    getplacepost(userEntityId)

                // console.log(data);

            },
            dataType: "json",
        });
    }
    function getplacepost(userEntityId = 0) {
        $('#childposting').empty();
        if ($('#controlingsearch option:selected').val()==0)
        return;
        $.ajax({
            url: "/ApiCalls/getpostplaceForParaPositionReport",
            type: "POST",
            data: {
                'E_R_ID': $('#controlingsearch option:selected').val()
            },


            cache: false,
            success: function (data) {
                $('#childposting').append('<option id="0" value="0" selected="selected">--Select Place of Posting--</option>');
                $.each(data, function (index, gpp) {
                    var selected = '';
                    if (gpp.entitY_ID == userEntityId)
                        selected = 'selected="selected"';
                    $('#childposting').append('<option ' + selected + ' value="' + gpp.entitY_ID + '" id="' + gpp.entitY_ID + '">' + gpp.c_NAME + '</option>')
                });
            },
            dataType: "json",
        });

    }
    function getParaPosition() {
        $('#observation_panel tbody').empty();
        $.ajax({
            url: "/ApiCalls/get_para_position_report",
            type: "POST",
            data: {
                'P_ID': $('#controlingsearch option:selected').val(),
                'C_ID': $('#childposting option:selected').val()               
            },
            cache: false,
            success: function (data) {
                g_response = data;
                var sr = 1;
                var t_tparas = 0;
                var t_sparas = 0;
                var t_uparas = 0;               
                $.each(data, function (i, v) {
                    t_tparas += parseInt(v.total_Paras);
                    t_sparas += parseInt(v.setteled_Para);
                    t_uparas += parseInt(v.unsetteled_Para);                  
                    $('#observation_panel tbody').append('  <tr id="' + v.id + '"><td align="center"> ' + sr + '</td> <td align="left">' + v.p_NAME + '</td><td align="left">' + v.c_NAME + '</td><td align="left">' + v.audiT_PERIOD + '</td> <td align="right">' + v.total_Paras + '</td> <td align="right">' + v.setteled_Para + '</td> <td align="right">' + v.unsetteled_Para + '</td><td class="text-center"><a href="#" class="text-danger" onclick="getParaDetails(' + v.audiT_PERIOD + ')">Details</a></td></tr>');
                    sr++;
                });
               
                $('#observation_panel tbody').append('<tr><td colspan="4" align="right">Total</td><td align="right">' + t_tparas + '</td><td align="right">' + t_sparas + '</td><td align="right">' + t_uparas + '</td></tr>')

            },
            dataType: "json",
        });
       
      
    }

    function getParaDetails(period){
        $('#para_details').modal('show');
        $('#para_details_table tbody').empty();
        $.ajax({
            url: "/ApiCalls/get_para_position_details",
            type: "POST",
            data: {
                'ENTITY_ID': $('#childposting option:selected').val(),
                'AUDIT_PERIOD': period
                
            },
            cache: false,
            success: function (data) {
                var sr = 1;
                if(data.length>0){
                    if(data[0].remarks.length>0){
                        alert(data[0].remarks);
                        return;
                    }
                }
                $.each(data, function (i, v) {
                    $('#audit_period_tag').html(v.audiT_PERIOD);
                    $('#para_details_table tbody').append('<tr><td>' + sr + '</td><td>' + v.parA_NO + '</td><td>' + v.heading + '</td><td>' + v.parA_STATUS + '</td></tr>')
                    sr++;
                });
              },
            dataType: "json",
        });


    }
</script>
<div class="row w-100">

    <div class="col-md-12 mt-3">

        <h3 style="color: #45c545;">Para Position</h3>

        <div class="row col-md-12 mt-3">
            <div class="col-md-2">
                <label class="text-bold">Relationship Type</label>
            </div>
            <div class="col-md-10">
                <select id="RelationshipField" onchange="getrelation();" class="form-control form-select">
                    <option id="0" value="0" selected="selected">--Select Relationship Type--</option>


                    @{
                        if (ViewData["Userrelationship"] != null)
                        {
                            foreach (var item in (dynamic)(ViewData["Userrelationship"]))
                            {
                                <option value="@item.ENTITY_REALTION_ID" id="@item.ENTITY_REALTION_ID">@item.FIELD_NAME</option>
                            }
                        }
                    }



                </select>
            </div>
        </div>

        <div class="row col-md-12 mt-3">
            <div class="col-md-2">
                <label class="text-bold">Controlling/Reporting Office</label>
            </div>
            <div class="col-md-4">
                <select id="controlingsearch" onchange="getplacepost();" class="form-control form-select">
                    <option id="0" value="0" selected="selected">--Select Controlling/Reporting Office--</option>
                </select>
            </div>


            <div class="col-md-2">
                <label class="text-bold">Place of Posting</label>
            </div>
            <div class="col-md-4">
                <select id="childposting" class="form-control form-select">
                    <option id="0" value="0" selected="selected">--Select Place of Posting--</option>

                </select>
            </div>
        </div>
        <div class="col-md-12 mt-3">
            <button onclick="getParaPosition();" class="btn btn-primary">Search Para</button>
        </div>
        <div class="mt-3 col-md-12">
            <table id="observation_panel" class="table table-hover table-bordered table-hover mt-3 table-striped">
                <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
                    <tr>
                    <th class="col-md-auto">Sr. No.</th>
                    <th class="col-md-auto">Controlling Office</th>
                    <th class="col-md-auto">Current Office</th>
                    <th class="col-md-auto">Audit Period</th>
                    <th class="col-md-auto text-center">Total Paras</th>
                    <th class="col-md-auto text-center">Settled Paras</th>
                    <th class="col-md-auto text-center">Un-Settled Para</th>
                    <th class="col-md-auto text-center"></th>

                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
        </table>
        </div>
    </div>
</div>


<div id="para_details" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog  modal-xl" role="document" style="max-width:1450px !important;">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Para Details During The Year <span id="audit_period_tag"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="mt-3 modal-body">
                <form>
                    <div class="col-md-12">
                        <table id="para_details_table" class="table table-hover table-bordered table-hover mt-3 table-striped">
                            <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
                                <tr>
                                    <th class="col-md-auto">Sr. No.</th>
                                    <th class="col-md-auto">Para No.</th>
                                    <th class="col-md-auto">Titile of Para</th>
                                    <th class="col-md-auto text-center">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
            <div class="mt-3 modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>



