@{
    ViewData["Title"] = "Group Wise Pages";
    Layout = "_Layout";
}

<script type="text/javascript">
   
    $(document).ready(function () {

        $("#searchTableRecord").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#group_wise_pages_grid tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        getGroupWisePages();
     
    }); 

    function getGroupWisePages() {

        $('#group_wise_user_grid tbody').empty();
        $.ajax({
            url: "/ApiCalls/get_group_wise_pages",
            type: "POST",
            data: {
               
            },
            cache: false,
            success: function (data) {

                var srNo = 1;
                $.each(data, function (index, row) {
                  
                    $('#group_wise_pages_grid tbody').append('<tr><td>' + srNo + '</td><td>' + row.g_ID+ '</td><td>' + row.g_NAME+ '</td><td>' + row.p_NAME+ '</td></tr>');
                    srNo++;
                });

            },
            dataType: "json",
        });


    }
</script>

<div class="mt-3 mb-4">
    <h3 style="color: #45c545;">Group Wise Pages</h3>
</div>

<div class="mt-3">

    <div class="col-md-12 px-0">
        <input class="form-control" id="searchTableRecord" type="text" placeholder="Search..">
    </div>

    <br>
    <table id="group_wise_pages_grid" class="table table-hover table-bordered table-hover mt-3 table-striped">
        <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
            <tr>
                <th>Sr. No.</th>
                <th>Group Id</th>
                <th>Group Name</th>
                <th>Page Name</th>
              
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

