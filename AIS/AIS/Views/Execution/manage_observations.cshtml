@{
    ViewData["Title"] = "Manage Observations";
    Layout = "_Layout";
}

<script type="text/javascript">
   
</script>


<div class="row col-md-12 mt-3">
    <h3 style=" display:block;color: #45c545;">Manage Observations</h3>
</div>
<div class="row col-md-12 mt-3">
    <div class="row col-md-2">
        <label><b>Entity:</b></label>
    </div>

    <div class="row col-md-10">
        <input disabled="disabled" class="form-control ml-1" type="text" />
    </div>


</div>
<div class="row col-md-12 mt-4">
    <div class="row col-md-2">
        <label><b>Audit Period:</b></label>

    </div>
    <div class="row col-md-10 ">
        <input disabled="disabled" class="form-control ml-1" type="text" />
    </div>


</div>


<div class="row col-md-12 mt-4">
   

    <div class="row col-md-12">
        <h3 style="display: block; color: #45c545;">Audit Observations</h3>
        <table id="checklistPanel" class="table table-bordered mb-0 mt-3 bg-white table-striped">
            <thead style="background-color:aquamarine;">
                <tr>
                    <th class="col-md-2">Memo No.</th>
                    <th class="col-md-3">Audit Observation</th>
                    <th class="col-md-3">Auditee Response</th>
                    <th class="col-md-2">Risk Category</th>
                    <th class="col-md-2">Settlement Status</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (ViewData["AssignedObservations"] != null)
                    {

                        var index = 1;
                        foreach (var item in (dynamic)(ViewData["AssignedObservations"]))
                        {
                            string sdate = @item.MEMO_DATE.ToString().Split(" ")[0];
                            string edate = @item.MEMO_REPLY_DATE.ToString().Split(" ")[0];
                            <tr>
                                <td class="text-center">@index</td>
                                <td>@item.ENTITY_NAME</td>
                                <td>@sdate</td>
                                <td>@edate</td>
                                <td>@item.STATUS</td>
                                <td class="text-center"><a onclick="showMemo('@item.OBSERVATION_TEXT',@item.OBS_ID,@item.OBS_TEXT_ID,'@item.STATUS','@item.REPLY_TEXT');" data="@item.OBSERVATION_TEXT" class="text-hover font-weight-bold text-success">View</a></td>
                            </tr>
                            index++;
                        }
                    }
                }
            </tbody>
            <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>

                    <td>
                        <select class="checklistaction form-select form-control" onchange="" aria-label="Default select example">
                            <option value="0" id="0" selected>No</option>
                            <option value="1" id="1">Yes</option>
                        </select>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>

<div class="row col-md-12">

    <div class="col-md-7 mt-4">
        <button class="btn btn-primary" style="float:right;">Add To Draft Report</button>
        <button class="btn btn-primary" style="float:right;">Settle/Resolve</button>
    </div>

</div>

