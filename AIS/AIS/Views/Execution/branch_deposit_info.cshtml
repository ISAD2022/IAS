@{
    ViewData["Title"] = "Branch Deposit Information";
    Layout = "_Layout";
}
<style type="text/css">
    .container {
        max-width: 100%;
    }

    .card-header {
        background-color: transparent !important;
        font-size: 20px;
        height: 100px;
    }

    .icon-card {
        margin: 10px;
    }
</style>


<script>

    $(document).ready(function () {

        getb_depositinfo();

        $("#searchTableRecord").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#b_d_det tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });


    });


    function getb_depositinfo() {

        var bid = $('#b_n').val();
        if (bid != 0) {
            $.ajax({
                url: "/ApiCalls/GetDepositAccountSubdetails",
                type: "POST",
                data: {
                    'b_name': bid
                },
                cache: false,
                success: function (data) {

                    console.log(data);
                    $('#b_d_det tbody').empty();
                    $.each(data, function (i, v) {
                        $('#b_d_det tbody').append('<tr><td >' + v.name + ' ' + '</td><td >' + v.cusT_NAME + '</td><td >' + v.acC_TITLE + '</td><td>' + v.acC_NUMBER + '</td> <td>' + v.accountcategory + '</td><td>' + v.accountstatus + '</td><td>' + v.cnic + ' ' + '</td><td>' + v.cnicexpirydate.split('T')[0] + '</td><td>' + v.oldaccountno + '</td><td>' + v.openingdate.split('T')[0] + '</td>  <td>' + v.lasttransactiondate.split('T')[0] + '</td> </tr>')
                    });
                },
                dataType: "json",
            });
        }
    }




</script>

<script type="text/javascript">

</script>
<div class="row col-md-12 mt-3">
    <h4 style="display: block; color: #45c545;">Branch Deposit Information</h4>
</div>

<div class="row col-md-12">
    <input class="form-control" id="searchTableRecord" type="text" placeholder="Search..">
</div>
<div class="row w-100 mt-3 pl-2">
    <table id="b_d_det" class="col-md-12 table table-bordered mb-0 mt-3 bg-white table-striped">
        <thead style="background-color: rgb(181 229 117 / 93%) !important; font-size:small">
            <tr>
                <th width="100">BRANCH</th>
                <th width="130">CUSTOMER NAME</th>
                <th width="100">ACC TITLE</th>
                <th width="80">ACCOUNT #</th>

                <th width="130">ACC CATEGORY</th>
                <th width="100">ACC STATUS</th>
                <th width="100">CNIC</th>
                <th width="100">CNIC EXP</th>

                <th width="50">OLD ACC #</th>
                <th width="150">ACC OPEN DATE</th>
                <th width="100">LAST TR DATE</th>

            </tr>
        </thead>
        <tbody style="font-size:small">
         
        </tbody>
    </table>



    <div class="row col-md-12 mt-3">

        <button onclick="history.back()" class="btn btn-primary" style="color:white">Return</button>

    </div>


</div>
