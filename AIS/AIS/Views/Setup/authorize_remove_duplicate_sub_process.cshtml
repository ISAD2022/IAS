@{
    ViewData["Title"] = "Authorize Merge Duplicate/Redundant Sub Process";
    Layout = "_Layout";
}
<style type="text/css">
    .container {
        max-width: 100%;
    }

    .card-header {
        background-color: transparent !important;
        font-size: 20px;
        height: 100px;
    }

    .icon-card {
        margin: 10px;
    }
</style>
<script type="text/javascript">
    var g_procId = 0;
    var g_subProcId = 0;
    var g_procDetailId = 0;
    var g_subProcList = [];
    var g_procDetailList = [];
    var g_procMergeIds=[];
    $(document).ready(function () {
        $("#searchTableRecord").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#authorizeMergeChecklistPanel tbody tr").filter(function () {
               
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
       
    });

    function getAuditSubChecklist() {
        var processId = $('#checklistSelectField').val();
        if (processId != 0) {
            $('#subchecklistSelectField').empty();
            $('#checkListDetailsPanel tbody').empty();
            $.ajax({
                url: g_asiBaseURL + "/ApiCalls/get_audit_sub_checklist",
                type: "POST",
                data: {
                    'PROCESS_ID': processId
                },
                cache: false,
                success: function (data) {
                    g_subProcList = data;
                    $('#subchecklistSelectField').append('<option value="0">--Select Audit Sub-Checklist--</option>');
                    $.each(data, function (i, v) {
                        $('#subchecklistSelectField').append('<option value="' + v.s_ID + '">' + v.heading + '</option>');
                        $('#checkListDetailsPanel tbody').append('<tr class="matched"><td>' + ++i + '</td><td>' + v.heading + '</td><td>' + v.risK_SEQUENCE + '</td><td>' + v.risK_WEIGHTAGE + '</td><td class="text-center"><input id="' + v.s_ID + '" class="chkbox" type="checkbox" /></td></tr>');
                    });
                },
                dataType: "json",
            });
        } else {
            g_entList = [];
            $('#subchecklistSelectField').empty();
            $('#checkListDetailsPanel tbody').empty();
            $('#subchecklistSelectField').append('<option value="0">--Select Audit Sub-Checklist--</option>');
        }

    }

    function getProcessesForMergeDuplicate() {
        g_procMergeIds = [];
        getAuditSubChecklist();
        var processId=$('#checklistSelectField').val();
        $('#authorizeMergeChecklistPanel tbody').empty();
        if (processId != 0) {
            $.ajax({
                url: g_asiBaseURL + "/ApiCalls/get_duplicate_Sub_Processes",
                type: "POST",
                data: {
                    'PROCESS_ID': processId
                },
                cache: false,
                success: function (data) {
                    
                    $.each(data, function (i, v) {
                        g_procMergeIds.push(v.m_ID);
                        $('#authorizeMergeChecklistPanel').append('<tr><td>' + v.m_ID + '</td><td>' + v.heading + '</td></tr>');

                    });
                },
                dataType: "json",
            });
        }
    }
 
    function authorizeMergeDuplicate() {
        var processId = $('#checklistSelectField').val();
        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/authorize_merge_duplicate_process",
            type: "POST",
            data: {
                'PROCESS_ID': processId,
                'AUTH_P_IDS': g_procMergeIds,

            },
            cache: false,
            success: function (data) {
                alert(data.Message);
                onAlertCallback(getProcessesForMergeDuplicate);
            },
            dataType: "json",
        });
    }
   
</script>
<div class="row text-center mt-3">
    <h3 style=" display:block;color: #45c545;">Authorize Merge Duplicate/Redundant Checklists Detail </h3>
</div>


<div class="row col-md-12">
    <label class="form-label font-weight-bold">Process</label>
    <select id="checklistSelectField" onchange="getProcessesForMergeDuplicate();" class="form-select form-control">
        <option value="0" id="0" selected>--Select Process--</option>
        @{
            if (ViewData["ProcessList"] != null)
            {
                foreach (var item in (dynamic)(ViewData["ProcessList"]))
                {
                        <option value="@item.T_ID" id="@item.T_ID">@item.HEADING</option>

                }
            }
        }

    </select>
</div>


<div class="row mt-3 col-md-12">

    <label class="form-label font-weight-bold">Sub Process</label>
    <select id="subchecklistSelectField" class="form-select form-control">
        <option value="0">--Select Sub-Checklist--</option>
    </select>


</div>

<div class="row col-md-12 mt-3">
    <h5>Search Sub Process</h5>
    <input id="searchTableRecord" type="text" class="form-control" />
</div>


<div class="row col-md-12 mt-1">
    <table id="authorizeMergeChecklistPanel" class="table table-bordered table mb-0 mt-3 bg-white table-hover table-striped">
        <thead>
            <tr style="background-color: rgb(181 229 117 / 93%) !important; ">
                <th class="col-md-1 font-weight-bold">ID</th>
                <th class="col-md-2 font-weight-bold">Duplicate Checklist</th>
            </tr>
        </thead>
        <tbody>
          
        </tbody>
    </table>
</div>


<div class="row col-md-12 mt-3">
    <button onclick="authorizeMergeDuplicate();" class="btn btn-danger offset-md-9 col-md-3">Auhtorize</button>
</div>

