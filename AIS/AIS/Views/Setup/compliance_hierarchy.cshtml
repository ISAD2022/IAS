@{
    ViewData["Title"] = "Compliance Hierarchy";
    Layout = "_Layout";
}

<script type="text/javascript">
    var g_periodId = 0;
    $(document).ready(function () {
        getComplianceHierarchy();
    });

    function getComplianceHierarchy() {
        $('#listOfComplianceHierarchy tbody').empty();
        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/get_compliance_hierarchy",
            type: "POST",
            data: {
               
            },
            cache: false,
            success: function (data) {
                $.each(data, function (i, v) {
                    $('#listOfComplianceHierarchy tbody').append('<tr><td>' + ++i + '</td><td>' + v.compliancE_UNIT + '</td><td>' + v.revieweR_NAME + ' ( ' + v.revieweR_PPNO + ')</td><td>' + v.approveR_NAME + ' ( ' + v.approveR_PPNO + ')</td><td><a href="#" onclick="event.preventDefault();updateComplianceHierarchy(' + v.entitY_ID + ', ' + v.revieweR_PPNO + ', ' + v.approveR_PPNO + ');">Update</a></td></tr>');
                    
                });

            },
            dataType: "json",
        });

    }

    function updateComplianceHierarchy(){
        $('#complianceUnit').modal('show');
    }

    function getMatchedPP(ppno, labelId) {
        $('#matchedPPNoPanels').empty();
        g_respUser = [];
        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/get_employee_name_from_pp",
            type: "POST",
            data: {
                'PP_NO': ppno
            },
            cache: false,
            success: function (data) {
                g_respUser.push(data);
                if (data.ppNumber > 0) {
                    $('#' + labelId).html(data.name + ' (' + data.ppNumber + ')');
                }
                else
                    $('#' + labelId).html('No record found..');
            },
            dataType: "json",
        });
    }





</script>
<div class="row mt-3">
    <div class="row col-md-12">
        <div class="col-md-6" style="padding-left:0px;">
            <h2 style="color: #45c545;">Compliance Unit</h2>
        </div>
    </div>
</div>
<div id="listOfComplianceHierarchyContainer" class="row mt-3">

    <br />
    <table id="listOfComplianceHierarchy" class="table table-hover table-bordered table-hover mt-3 table-striped">
        <thead style="background-color: rgb(181 229 117 / 93%) !important;">
            <tr>
                <th class="col-md-1">Sr No.</th>
                <th class="col-md-4">Compliance Unit</th>
                <th class="col-md-2">Incharge Unit</th>
                <th class="col-md-2">Settelement Officer</th>
                <th class="col-md-1"></th>
            </tr>
        </thead>
        <tbody>
           
        </tbody>
    </table>
</div>


<div id="complianceUnit" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-scrollable modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Compliance Unit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row col-md-12">
                    <div class="row col-md-12">
                        <h4 class="text-bold">Settelement Officer</h4>
                    </div>
                    <div class="row col-md-12 mt-1">
                        <div class="col-md-2">
                            <label>P.P.No.</label>
                        </div>
                        <div class="col-md-6">
                            <input id="ppnoSearchField" type="text" class="form-control" placeholder="P.P.Number" aria-label="P.P.Number" aria-describedby="basic-addon2">
                        </div>
                        <div class="col-md-4">
                            <button id="searchbtn" onclick="getMatchedPP($('#ppnoSearchField').val(),'settlementEmpNameLabel');" class="btn btn-danger" style="margin-left:auto;">Search</button>
                        </div>
                        <div class="row col-md-12 mt-2">
                            <div class="col-md-2"> <label>Employee Name</label></div>
                            <div class="col-md-10">
                                <span id="settlementEmpNameLabel"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row col-md-12 mt-3">
                    <div class="row col-md-12">
                        <h4 class="text-bold">Incharge Compliance Unit / Authorizer</h4>
                    </div>

                    <div class="row col-md-12 mt-1">
                        <div class="col-md-2">
                            <label>P.P.No.</label>
                        </div>
                        <div class="col-md-6">
                            <input id="ppnoAuthSearchField" type="text" class="form-control" placeholder="P.P.Number" aria-label="P.P.Number" aria-describedby="basic-addon2">
                        </div>
                        <div class="col-md-4">
                            <button id="searchbtn" onclick="getMatchedPP($('#ppnoAuthSearchField').val(),'authEmpNameLabel');" class="btn btn-danger" style="margin-left:auto;">Search</button>
                        </div>
                        <div class="row col-md-12 mt-2">
                            <div class="col-md-2"> <label>Employee Name</label></div>
                            <div class="col-md-10">
                                <span id="authEmpNameLabel"></span>
                            </div>
                        </div>
                    </div>
                </div>
               

                <div class="modal-footer mt-2">
              
                <button type="button" class="btn btn-danger">Save</button>
            </div>
        </div>
    </div>
</div>

