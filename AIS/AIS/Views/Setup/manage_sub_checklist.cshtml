@{
    ViewData["Title"] = "Manage Sub Checklist";
    Layout = "_Layout";
}
<style type="text/css">
    .container {
        max-width: 100%;
    }

    .card-header {
        background-color: transparent !important;
        font-size: 20px;
        height: 100px;
    }

    .icon-card {
        margin: 10px;
    }
</style>
<script type="text/javascript">
    var g_procId = 0;
    var g_subProcId = 0;
    var g_subProcList=[];
    $(document).ready(function () {
        $("#searchTableRecord").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listOfDepartment tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

    function addNewSubCheckList(id) {
        g_subProcId = 0;
        g_procId = 0;
        $('#updateEntityModal').modal('show');
        $('#newChecklist').val(0);
        $('#entCodeField').val("");
    }
    
    function openUpdateSubCheclist(id) {
        g_subProcId=id;
        $('#updateEntityModal').modal('show');
        $.each(g_subProcList, function (i, v) {
            if (v.s_ID == g_subProcId) {
                g_procId=v.t_ID;
                $('#newChecklist').val(v.t_ID);
                $('#entCodeField').val(v.heading);
            }
        });
        
    }
   
    function reloadLocation() {
        window.location.reload();
    }

    function updateSubProcess() {
        if ($('#newChecklist').val() == 0) {
            alert("Please select Process");
            return;
        }
        if ($('#entCodeField').val() == "") {
            alert("Please enter Sub Process Title");
            return;
        }
        if (g_subProcId != 0)
        {
            $.ajax({
                url: "/ApiCalls/update_audit_sub_checklist",
                type: "POST",
                data: {
                    'OLD_PROCESS_ID': g_procId,
                    'PROCESS_ID': $('#newChecklist').val(),
                    'SUB_PROCESS_ID': g_subProcId,
                    'HEADING': $('#entCodeField').val(),
                    'ENTITY_TYPE_ID': 6
                },
                cache: false,
                success: function (data) {
                    alert(data.Message);
                    ShowSubChecklist();
                },
                dataType: "json",
            });
        }else{

            $.ajax({
                url: "/ApiCalls/add_audit_sub_checklist",
                type: "POST",
                data: {
                    'PROCESS_ID': $('#newChecklist').val(),
                    'ENTITY_TYPE_ID': 6,
                    'HEADING': $('#entCodeField').val(),
                },
                cache: false,
                success: function (data) {
                    alert(data.Message);
                    ShowSubChecklist();
                },
                dataType: "json",
            });
        }
     
      

    }
    function ShowSubChecklist() {
        var processId = $('#entityTypeSelectField').val();
        if (processId != 0) 
        {
            $.ajax({
                url: "/ApiCalls/get_audit_sub_checklist",
                type: "POST",
                data: {
                    'PROCESS_ID': processId
                },
                cache: false,
                success: function (data) {
                    g_subProcList = data;
                    var sr = 0;
                    $('#auditeeEntitiesList tbody').empty();
                    $.each(data, function (i, v) {
                        sr++;
                        $('#auditeeEntitiesList tbody').append('<tr><td>' + sr + '</td><td>' + v.heading + '</td><td style="cursor:pointer;"><a class="text-danger" onclick="openUpdateSubCheclist(' + v.s_ID + ')">Update</a></td></tr>');

                    });
                },
                dataType: "json",
            });
        } 
        else {
            g_entList = [];
            $('#auditeeEntitiesList tbody').empty();
        }

    }
</script>
<div class="row text-center mt-3">
    <div class="col-md-6 text-left">
        <h3 style=" display:block;color: #45c545;">Audit Sub Checklist </h3>
    </div>
    <div class="col-md-6 text-right" style="padding-right:45px;">
        <button onclick="addNewSubCheckList(0);" class="btn btn-danger">Add New Sub Checklist</button>
    </div>
    
</div>
<div class="row mt-3 col-md-12">
    <label><b>Select Entity Type</b></label>
    <select id="entityTypeSelectField" onchange="ShowSubChecklist();" class="form-select form-control">
        <option value="0" id="0" selected>--Select Checklist Type--</option>
        @{
            if (ViewData["ChecklistTypes"] != null)
            {
                foreach (var item in (dynamic)(ViewData["ChecklistTypes"]))
                {
                    <option value="@item.T_ID" id="@item.T_ID">@item.HEADING</option>

                }
            }
        }

    </select>
</div>
<div class="row col-md-12 mt-3">
    <table id="auditeeEntitiesList" class="table table-bordered table mb-0 mt-3 bg-white table-hover table-striped">
        <thead>
            <tr style="background-color: rgb(181 229 117 / 93%) !important; ">
                <th class="col-md-auto">Sr No.</th>
                <th class="col-md-auto">Sub Checklist</th>
                <th class="col-md-auto">Action</th>
            </tr>
        </thead>
        <tbody></tbody>

    </table>
</div>


<div id="updateEntityModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Update Auditee Entity</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row col-md-12 mt-3">
                        <div class="row col-md-4">
                            <label>Checklist</label>
                        </div>
                        <div class="row col-md-8">
                            <select id="newChecklist" class="form-select form-control">
                                <option value="0" id="0" selected>--Select Checklist Type--</option>
                                @{
                                    if (ViewData["ChecklistTypes"] != null)
                                    {
                                        foreach (var item in (dynamic)(ViewData["ChecklistTypes"]))
                                        {
                                            <option value="@item.T_ID" id="@item.T_ID">@item.HEADING</option>

                                        }
                                    }
                                }

                            </select>
                        </div>
                    </div>
                    <div class="row col-md-12 mt-3">
                        <div class="row col-md-4">
                            <label>Heading</label>
                        </div>
                        <div class="row col-md-8">
                            <input id="entCodeField" class="form-control" type="text" />
                        </div>
                    </div>
                 

                   

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="updateSubProcess();" type="button" data-dismiss="modal" class="btn btn-success">Save Changes</button>

            </div>
        </div>
    </div>
</div>