@{
    ViewData["Title"] = "Manage Checklist";
    Layout = "_Layout";
}
<style type="text/css">
    .container {
        max-width: 100%;
    }

    .card-header {
        background-color: transparent !important;
        font-size: 20px;
        height: 100px;
    }

    .icon-card {
        margin: 10px;
    }
</style>
<script type="text/javascript">
    var g_procId = 0;
    var g_subProcId = 0;
    var g_subProcList=[];
    $(document).ready(function () {
        $("#searchTableRecord").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#listOfDepartment tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });


    
    function openUpdateSubCheclist(id, text) {
        g_subProcId=id;
        $('#updateEntityModal').modal('show');
        $('#entCodeField').val(text);
        
    }
    function reloadLocation(){
        window.location.reload();
    }

    function updateSubProcess() {
        if ($('#entCodeField').val()==""){
            alert("Please enter Checklist Title");
            return;
        }
        if (g_subProcId !=0){
            $.ajax({
                url: "/ApiCalls/update_audit_checklist",
                type: "POST",
                data: {
                    'PROCESS_ID': g_subProcId,
                    'HEADING': $('#entCodeField').val(),
                    'ACTIVE': $('#entActiveField').val() 
                },
                cache: false,
                success: function (data) {
                    alert(data.Message);
                    onAlertCallback(reloadLocation);
                },
                dataType: "json",
            });
        }else{
            $.ajax({
                url: "/ApiCalls/add_audit_checklist",
                type: "POST",
                data: {
                    'HEADING': $('#entCodeField').val(),
                    'ENTITY_TYPE_ID': 6, //Hardcoded 6 for Branch
                    'ACTIVE': $('#entActiveField').val(),
                },
                cache: false,
                success: function (data) {
                    alert(data.Message);
                    onAlertCallback(reloadLocation);
                },
                dataType: "json",
            });
        }
      
    }

    function addNewCheckList(id) {
        g_subProcId = id;
        $('#updateEntityModal').modal('show');
        $('#entCodeField').val('');
    }
</script>
<div class="row mt-3">
    <div class="col-md-6 text-left">
        <h3 style=" display:block;color: #45c545;">Audit Checklist </h3>
    </div>
    <div class="col-md-6 text-right" style="padding-right:45px;">
        <button onclick="addNewCheckList(0);"  class="btn btn-danger">Add New Checklist</button>
    </div>
    
</div>
<div class="row col-md-12 mt-3">
    <table id="auditeeEntitiesList" class="table table-bordered table mb-0 mt-3 bg-white table-hover table-striped">
        <thead>
            <tr style="background-color: rgb(181 229 117 / 93%) !important; ">
                <th class="col-md-auto">Sr No.</th>
                <th class="col-md-auto">Sub Checklist</th>
                <th class="col-md-auto">Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (ViewData["ChecklistTypes"] != null)
                {
                    int SrNo = 1;

                    foreach (var item in (dynamic)(ViewData["ChecklistTypes"]))
                    {

                        <tr>
                            <td class="text-center">@SrNo</td>
                            <td class="col-md-auto">@item.HEADING</td>
                            <td style="cursor:pointer;">
                                <a class="text-danger" onclick="openUpdateSubCheclist( @item.T_ID, '@item.HEADING' )">Update</a>
                            </td>
                        </tr>
                        SrNo= @SrNo + 1;

                    }
                    
                }
            }
        </tbody>

    </table>
</div>


<div id="updateEntityModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Add/Update Process</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    
                    <div class="row col-md-12 mt-3">
                        <div class="row col-md-4">
                            <label>Heading</label>
                        </div>
                        <div class="row col-md-8">
                            <input id="entCodeField" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="row col-md-12 mt-3">
                        <div class="row col-md-4">
                            <label>Is Active</label>
                        </div>
                        <div class="row col-md-8">
                            <select id="entActiveField" class="form-control">
                                <option value="Y">Yes</option>
                                <option value="N">No</option>
                            </select>
                           
                        </div>
                    </div>

                   

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="updateSubProcess();" type="button" data-dismiss="modal" class="btn btn-success">Save Changes</button>

            </div>
        </div>
    </div>
</div>