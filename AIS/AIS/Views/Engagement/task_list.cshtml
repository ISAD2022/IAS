@{
    ViewData["Title"] = "Task List";
    Layout = "_Layout";
}
<script type="text/javascript">
  
</script>
<div>
    <div class="mt-3">
        <h6>Job Assigned To: @ViewData["EMP_NAME"] </h6>
    <h6>Team: @ViewData["TEAM_NAME"] </h6>
    <h6>PP. No. @ViewData["PPNumber"] </h6>
    </div>
    <div class="row" style="margin-top:40px;">
        <div>
            <center>
                <h3 style="display: block; color: #45c545;">Task List/Job Assignment</h3>
            </center>
        </div>

        <table class="table table-responsive table-sm table-bordered mb-0 mt-3 bg-white table-striped">
            <thead>
                <tr>
                    <th class="col-md-1 font-weight-bold">Sr. No</th>
                    <th class="col-md-3 font-weight-bold">Audit Entity</th>
                    <th class="col-md-2 font-weight-bold" >Start Date</th>
                    <th class="col-md-2 font-weight-bold" >End Date</th>
                    <th class="col-md-3 font-weight-bold" >Status</th>
                    <th class="col-md-1 font-weight-bold" >Joining</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (ViewData["TaskList"] != null)
                    {

                        var index = 1;
                        foreach (var item in (dynamic)(ViewData["TaskList"]))
                        {
                            var sDate = item.START_DATE.ToString();
                            var eDate = item.END_DATE.ToString();

                            <tr>
                                <td>@index</td>
                                <td>@item.ENTITY_NAME</td>
                                <td>@sDate.Split(" ")[0]</td>
                                <td>@eDate.Split(" ")[0]</td>
                                <td>@item.STATUS</td>                               
                                <td class="text-hover text-danger">Join Now</td>
                            </tr>
                            index++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>