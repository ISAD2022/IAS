@{
    ViewData["Title"] = "Compliance Flow Management";
    Layout = "_Layout";

}

<script type="text/javascript">
    $(document).ready(function () {
        $('#groupSelectionPanel').hide();
        $('#AddUpdateComplianceFlowButton').hide();
        $('#prevNextGroupSelectionPanel').hide();

    });
    function entityTypeSelectionChangeEvent() {

        if ($('#entityTypeSelectionField option:selected').val() == 0) {

            $('#groupSelectionPanel').hide();
            $('#AddUpdateComplianceFlowButton').hide();
            $('#entity_compliance_flow_grid tbody').empty();

        }
        else {
            $('#groupSelectionPanel').show();
            $('#AddUpdateComplianceFlowButton').show();
            $('#entity_compliance_flow_grid tbody').empty();
            $.ajax({
                url: "/ApiCalls/get_entity_type_compliance_flow",
                type: "POST",
                data: {
                    "ENTITY_TYPE_ID": $('#entityTypeSelectionField').val()
                },
                cache: false,
                success: function (data) {
                    $.each(data, function (i, v) {
                        $('#entity_compliance_flow_grid').append('<tr><td>' + ++i + '</td><td>' + v.grouP_NAME + '</td><td>' + v.nexT_GROUP_NAME + '</td><td>' + v.preV_GROUP_NAME + '</td></tr>');
                    });  

                },
                dataType: "json",
            });

        }
    }

    function groupSelectionChangeEvent() {

        if ($('#groupSelectionBox option:selected').val() == 0) {

            $('#prevNextGroupSelectionPanel').hide();

        }
        else {
            $('#prevNextGroupSelectionPanel').show();

           
            $.ajax({
                url: "/ApiCalls/get_prev_next_group_stage",
                type: "POST",
                data: {
                    "ENTITY_TYPE": $('#entityTypeSelectionField').val(),
                    "GROUP_ROLE": $('#groupSelectionBox').val()
                },
                cache: false,
                success: function (data) {

                    $('#prevGroupSelectionBox').val(data.preV_GROUP_ID);
                    $('#nextGroupSelectionBox').val(data.nexT_GROUP_ID);
                    

                },
                dataType: "json",
            });
        }
    }
 
    function UpdateComplianceWorkFlow() {
        if ($('#prevGroupSelectionBox option:selected').val()==0){
            alert("Plase select Previous Role State to proceed");
            return;
        }
        if ($('#nextGroupSelectionBox option:selected').val() == 0) {
            alert("Plase select Next Role State to proceed");
            return;
        }
        $.ajax({
            url: "/ApiCalls/update_compliance_flow",
            type: "POST",
            data: {
                'GROUP_ID': $('#groupSelectionBox option:selected').val(),
                'ENTITY_TYPE_ID': $('#entityTypeSelectionField option:selected').val(),
                'PREV_GROUP_ID': $('#prevGroupSelectionBox option:selected').val(),
                'NEXT_GROUP_ID': $('#nextGroupSelectionBox option:selected').val(),
            },
            cache: false,
            success: function (data) {
             alert(data.Message);
                onAlertCallback(reloadPage)
            },
            dataType: "json",
        });
    }

    function addComplianceFlow(){
        $('#updateComplianceFlowEntityTypeModal').modal('show');
    }

    function reloadPage(){
        window.location.reload();
    }

</script>


<div class="row col-md-12 mt-3">
    <h3 style=" display:block;color: #45c545;">Compliance Flow Management</h3>
</div>

<div class="row col-md-12 mt-3">
    <label>Entity Type</label>
    <select id="entityTypeSelectionField" onchange="entityTypeSelectionChangeEvent();" class="form-select form-control" aria-label="Default select example">
        <option value="0" selected>--Select Entity Type--</option>
        @{
            if (ViewData["EntitiesList"] != null)
            {
                foreach (var item in (dynamic)(ViewData["EntitiesList"]))
                {
                        <option value="@item.CODE" id="@item.CODE">@item.NAME</option>
                }
            }
        }
    </select>
</div>


<div class="mt-3 row col-md-12">
    <div id="AddUpdateComplianceFlowButton" class="row col-md-12">
        <button onclick="addComplianceFlow();" class="btn btn-primary col-md-3 offset-md-9">Add Compliance Flow</button>
    </div>
    <table id="entity_compliance_flow_grid" class="table table-hover table-bordered table-hover mt-3 table-striped">
        <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
            <tr>
                <th>Sr. No.</th>
                <th>Role</th>
                <th>Previous Role</th>
                <th>Next Role</th>

            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
   
</div>



<div id="updateComplianceFlowEntityTypeModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" style="min-width:90%" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Update Compliance Flow</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>


                    <div id="groupSelectionPanel" class="row col-md-12 mt-3">
                        <label>Group / Role</label>
                        <select id="groupSelectionBox" onchange="groupSelectionChangeEvent();" class="form-select form-control" aria-label="Default select example">
                            <option value="0" selected>--Select Group/Roles--</option>
                            @{
                                if (ViewData["GroupList"] != null)
                                {
                                    foreach (var item in (dynamic)(ViewData["GroupList"]))
                                    {
                                        <option value="@item.GROUP_CODE" id="@item.GROUP_CODE">@item.GROUP_NAME</option>
                                    }
                                }
                            }
                        </select>
                    </div>

                    <div id="prevNextGroupSelectionPanel" class="row col-md-12 mt-3">

                        <label> Previous Role State</label>
                        <select id="prevGroupSelectionBox" class="form-select form-control" aria-label="Default select example">
                            <option value="0" selected>--Select Group/Roles--</option>
                            @{
                                if (ViewData["GroupList"] != null)
                                {
                                    foreach (var item in (dynamic)(ViewData["GroupList"]))
                                    {
                                        <option value="@item.GROUP_CODE" id="@item.GROUP_CODE">@item.GROUP_NAME</option>
                                    }
                                }
                            }
                        </select>



                        <label> Next Role State</label>
                        <select id="nextGroupSelectionBox" class="form-select form-control" aria-label="Default select example">
                            <option value="0" selected>--Select Group/Roles--</option>
                            @{
                                if (ViewData["GroupList"] != null)
                                {
                                    foreach (var item in (dynamic)(ViewData["GroupList"]))
                                    {
                                        <option value="@item.GROUP_CODE" id="@item.GROUP_CODE">@item.GROUP_NAME</option>
                                    }
                                }
                            }
                        </select>                     

                    </div>



                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="UpdateComplianceWorkFlow();" type="button" data-dismiss="modal" class="btn btn-success">Update Compliance Flow</button>

            </div>
        </div>
    </div>
</div>
