@{
    ViewData["Title"] = "Compliance Submitted By Auditee";
    Layout = "_Layout";
}
<script>
    var g_paraId = 0;
    var g_paraRef = 0;
    var g_paraCat = "";
    var g_repliedDate = "";
    var g_obsList = [];

    $(document).ready(function () {
        getLegacyPara();
        $('#viewMemo_compliance').richText({
            imageUpload: false,
            fileUpload: false,
            videoEmbed: false,
            urls: false
        });      
    });

    function viewParaDetails(ref_p, memo_no, paraId) {
        g_paraRef = ref_p;
        $.ajax({
            url: "/ApiCalls/get_old_para_br_compliance_text",
            type: "POST",
            data: {
                'REF_P': g_paraRef
            },
            cache: false,
            success: function (data) {
                $('#viewMemoModel').modal('show');
                $('#viewMemo_memoNumber').val(memo_no);
                $('#viewMemo_process').val(data.checklist);
                $('#viewMemo_subprocess').val(data.subchecklist);
                $('#viewMemo_checklist_detail').val(data.checklistdetail);
                $('#viewMemo_memo').html(data.parA_TEXT);
            },

            dataType: "json",
        });
    }
    function viewReviewerResponse(ref_p, memo_no, paraId) {
        g_paraRef = ref_p;
        $.ajax({
            url: "/ApiCalls/get_old_para_br_compliance_text",
            type: "POST",
            data: {
                'REF_P': g_paraRef
            },
            cache: false,
            success: function (data) {
                $('#viewMemoModel').modal('show');
                $('#viewMemo_memoNumber').val(memo_no);
                $('#viewMemo_process').val(data.checklist);
                $('#viewMemo_subprocess').val(data.subchecklist);
                $('#viewMemo_checklist_detail').val(data.checklistdetail);
                $('#viewMemo_memo').html(data.parA_TEXT);
            },

            dataType: "json",
        });
    }
    function getLegacyPara() {

        $('#manageObsPanel tbody').empty();
        $.ajax({
            url: "/ApiCalls/get_old_para_br_compliance_recommendation",
            type: "POST",
            data: {

            },
            cache: false,
            success: function (data) {
                g_obsList = data;
                $('#entityNameField').html(data.length > 0 ? data[0].name : '');
                $.each(data, function (index, child) {
                    $('#manageObsPanel tbody').append('<tr id="div_' + child.id + '"><td><p class="fw-normal mb-1">' + child.auditeename + '</p></td><td><p class="fw-normal mb-1">' + child.auditperiod + '</p></td><td><p class="fw-normal mb-1">' + child.parano + '</p></td><td><p  class="fw-normal mb-1">' + child.gistofpara + '</p></td><td><p  class="fw-normal mb-1">' + child.amount + '</p></td><td aling="center"><p  class="fw-normal mb-1 text-center"><a href="#" onclick="viewObservationStatus(' + child.id + ' ,\'' + child.reF_P + '\',\'' + child.parA_CATEGORY + '\',\'' + child.replieddate.split(' ')[0] + '\' );" class="text-hover text-primary text-center">View</a></p></td></tr>');
                });
            },

            dataType: "json",
        });

    }      

    function viewObservationStatus(id,refP, paraCat, replyDate)
    {
        g_paraId = id;
        g_paraRef = refP;
        g_paraCat = paraCat;
        g_repliedDate = replyDate;
        $("#viewMemoModel").modal('show');
        $.ajax({
            url: "/ApiCalls/get_old_para_imp_text",
            type: "POST",
            data: {
                'PID':g_paraId,
                'REF_P': g_paraRef,
                'PARA_CATEGORY': g_paraCat,
                'REPLY_DATE': g_repliedDate

            },
            cache: false,
            success: function (data) {
                $('#para').html(data.parA_TEXT);
                $('#processField').val(data.checklist);
                $('#subprocessField').val(data.subchecklist);
                $('#checklistDetailField').val(data.checklistdetail);
                $('#viewMemo_brcompliance').html(data.brancH_REPLY);
                $('#zmoRemarksField').html(data.zonE_REPLY);
                $('#listofRespPersons tbody').empty();
                $('#listofRespPersonsForUpdateDelete tbody').empty();

                

                if (data.responsiblE_PPs.length > 0) {
                    $.each(data.responsiblE_PPs, function (j, pp) {
                        var srNo = $('#listofRespPersons tbody tr').length;
                        srNo++;
                        $('#listofRespPersons tbody').append('<tr id="tr_' + pp.pP_NO + '"><td>' + srNo + '</td><td>' + pp.pP_NO + '</td><td>' + pp.emP_NAME + '</td><td>' + pp.loaN_CASE + '</td><td>' + pp.lC_AMOUNT + '</td><td>' + pp.accounT_NUMBER + '</td><td>' + pp.acC_AMOUNT + '</td></tr>');
                        $('#listofRespPersonsForUpdateDelete tbody').append('<tr id="tr_' + pp.pP_NO +(j+1)+'"><td>' + srNo + '</td><td>' + pp.pP_NO + '</td><td>' + pp.emP_NAME + '</td><td>' + pp.loaN_CASE + '</td><td>' + pp.lC_AMOUNT + '</td><td>' + pp.accounT_NUMBER + '</td><td>' + pp.acC_AMOUNT + '</td><td><a href="#" onclick="updateResponsible(this);">Update</a></td></tr>');
                    });
                }
                $('#viewMemo_evidences').empty();
                if (data.evidences.length > 0) {
                    $.each(data.evidences, function (j, pp) {

                         $('#viewMemo_evidences').append('<div class="col-md-6"><img src="/Auditee_Evidences/' + pp.imagE_NAME + '" /></div>');
                    });
                }

            },
            dataType: "json",
        });
        
        
    }

    function updateResponsible(e){
        $('#ResponsiblePPModel').modal('show');
    }

    function setParaStatusSettled() {

        $.ajax({
            url: "/ApiCalls/submit_old_para_br_compliance_status",
            type: "POST",
            data: {
                'PARA_ID': g_paraId,
                'REFID': g_paraRef,
                'SETTLE_INDICATOR': 'Y',
                'PARA_CAT': g_paraCat,
                'REMARKS': $('#viewMemo_complianc').val(),
                'NEW_STATUS':6
            },
            cache: false,
            success: function (data) {
                $("#viewMemoModel").modal('hide');
                alert(data.Message);
                onAlertCallback(reloadLocation);
            },
            dataType: "json",
        });

    }
    function setParaStatusUnsettled() {
        $.ajax({
            url: "/ApiCalls/submit_old_para_br_compliance_status",
            type: "POST",
            data: {
                'PARA_ID': g_paraId,
                'REFID': g_paraRef,
                'SETTLE_INDICATOR': 'N',
                'PARA_CAT': g_paraCat,
                'REMARKS': $('#viewMemo_complianc').val(),
                'NEW_STATUS': 8
            },
            cache: false,
            success: function (data) {
                $("#viewMemoModel").modal('hide');
                alert(data.Message);
                onAlertCallback(reloadLocation);
            },
            dataType: "json",
        });
    }
    function setParaStatusPartiallySettle() {
        $.ajax({
            url: "/ApiCalls/submit_old_para_br_compliance_status",
            type: "POST",
            data: {
                'PARA_ID': g_paraId,
                'REFID': g_paraRef,
                'SETTLE_INDICATOR':'P',
                'PARA_CAT': g_paraCat,
                'REMARKS': $('#viewMemo_complianc').val(),
                'NEW_STATUS': 8
            },
            cache: false,
            success: function (data) {
                $("#viewMemoModel").modal('hide');
                alert(data.Message);
                onAlertCallback(reloadLocation);
            },
            dataType: "json",
        });
    }
    function reloadLocation() {
        getLegacyPara();
    }
</script>

<div class="row">
    <div class="col-md-12 mt-3">
        <h3 style=" display:block;color: #45c545;">Old Audit Observations</h3>
     
    </div>
    <div class="row col-md-12 mt-3">
        <table id="manageObsPanel" class="table table-hover table-bordered table-hover mt-3 table-striped">
            <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
                <tr>
                    <th class="col-md-auto">Auditee Name</th>
                    <th class="col-md-auto">Audit Year</th>
                    <th class="col-md-auto">Para No.</th>
                    <th class="col-md-auto">Observation</th>
                    <th class="col-md-auto">Amount</th>
                    <th class="col-md-auto text-center">Compliance</th>
                </tr>
            </thead>
            <tbody></tbody>

        </table>
    </div>

</div>


<div id="viewMemoModel" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Remarks</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
           
            <div class="mt-3 modal-body">
                <form>

                    <div class="row col-md-12">

                        <label class="font-weight-bold">Process</label>
                        <input class="form-control" id="processField" disabled="disabled" />


                    </div>
                    <div class="row mt-3 col-md-12">

                        <label class="font-weight-bold">Sub-Process</label>

                        <input class="form-control" id="subprocessField" disabled="disabled" />
                    </div>

                    <div class="row mt-3 col-md-12">

                        <label class="font-weight-bold">Checklist Details </label>
                        <textarea class="form-control" id="checklistDetailField" disabled="disabled"></textarea>
                    </div>

                    <div class="row mt-3 col-md-12">
                        <label class="font-weight-bold">Observation</label>

                    </div>
                    <div class="row mt-3 col-md-12">
                        <div id="para" class="col-md-12"></div>

                    </div>

                    <div class="form-group mt-3">
                        <label for="viewMemo_respPP" class="font-weight-bold">Responsible Personals</label>
                        <div class="col-md-12 pl-0 pr-0">
                            <table id="listofRespPersons" class="table table-hover table-bordered table-hover mt-3 table-striped">
                                <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
                                    <tr>
                                        <th class="col-md- auto font-weight-bold">Sr.No</th>
                                        <th class="col-md- auto font-weight-bold">P.P. No</th>
                                        <th class="col-md- auto font-weight-bold">Name</th>
                                        <th class="col-md- auto font-weight-bold">Loan Case</th>
                                        <th class="col-md- auto font-weight-bold">LC Amount</th>
                                        <th class="col-md- auto font-weight-bold">Account No.</th>
                                        <th class="col-md- auto font-weight-bold">ACC Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <hr style="border: 3px solid black;" />
                    <h5 style="background-color: rgb(181 229 117 / 93%) !important; height:50px; padding-top:12px;" class="text-center"><b>Branch Compliance</b></h5>
                    <hr style="border: 3px solid black;" />
                    <div class="form-group mt-3">
                        <div class="col-md-12" id="viewMemo_brcompliance"></div>
                    </div>
                    <div class="form-group mt-3">
                        <label for="viewMemo_evidences">Evidences</label>
                        <div class="col-md-12 row" id="viewMemo_evidences"></div>
                    </div>
                    <hr style="border: 3px solid black;" />
                    <h5 style="background-color: rgb(181 229 117 / 93%) !important; height:50px; padding-top:12px; " class="text-center"><b>Zonal Manager Remarks</b></h5>
                    <hr style="border: 3px solid black;" />
                    <div class="row mt-3 col-md-12">
                        <div class="col-md-12" id="zmoRemarksField"></div>
                    </div>
                    <hr style="border: 3px solid black;" />
                    <h5 style="background-color: rgb(181 229 117 / 93%) !important; height:50px; padding-top:12px; " class="text-center">
                        <b>In-charge Implementation Section</b></h5>
                    <hr style="border: 3px solid black;" />
                    <div class="form-group mt-3">
                        <label for="viewMemo_respPP" class="font-weight-bold">Update / Delete Responsibles</label>
                        <div class="col-md-12 pl-0 pr-0">
                            <table id="listofRespPersonsForUpdateDelete" class="table table-hover table-bordered table-hover mt-3 table-striped">
                                <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
                                    <tr>
                                        <th class="col-md- auto font-weight-bold">Sr.No</th>
                                        <th class="col-md- auto font-weight-bold">P.P. No</th>
                                        <th class="col-md- auto font-weight-bold">Name</th>
                                        <th class="col-md- auto font-weight-bold">Loan Case</th>
                                        <th class="col-md- auto font-weight-bold">LC Amount</th>
                                        <th class="col-md- auto font-weight-bold">Account No.</th>
                                        <th class="col-md- auto font-weight-bold">ACC Amount</th>
                                        <th class="col-md- auto font-weight-bold">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="viewMemo_compliance">In-charge Implementation Remarks</label>
                        <textarea class="form-control" id="viewMemo_complianc"></textarea>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button id="submitPartialSettleViewModel" type="button" class="btn btn-primary">Partial Settle</button>
                <button id="submitSettleViewModel" type="button" class="btn btn-success">Settle</button>
                <button id="submitUnsettleViewModel" type="button" class="btn btn-danger">Unsettle</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>


<div id="ResponsiblePPModel" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Responsible Person</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="col-md-12">
                            <h5 id="updatePPNo"></h5>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">                            
                            <label>Loan Case Number</label>
                            <input id="updateLoanCaseNo" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>Loan Case Amount</label>
                            <input id="updateLoanCaseAmount" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">                            
                            <label>Account Number</label>
                            <input id="updateAccountNo" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>Account Amount</label>
                            <input id="updateAccountAmount" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div id="matchedPPNoPanels" style="padding:20px;">
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button onclick="updateResponsibilityToMainTable();" type="button" class="btn btn-danger">Update Responsibility</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>





