@{
    ViewData["Title"] = "Compliance Submitted By Auditee";
    Layout = "_Layout";
}
<script>
    var g_paraId = 0;
    var g_paraRef = 0;
    var g_paraCat = "";
    var g_obsList = [];

    $(document).ready(function () {
        getLegacyPara();
        $('#viewMemo_compliance').richText({
            imageUpload: false,
            fileUpload: false,
            videoEmbed: false,
            urls: false
        });      
    });

    function viewParaDetails(ref_p, memo_no, paraId) {
        g_paraRef = ref_p;
        $.ajax({
            url: "/ApiCalls/get_old_para_br_compliance_text",
            type: "POST",
            data: {
                'REF_P': g_paraRef
            },
            cache: false,
            success: function (data) {
                $('#viewMemoModel').modal('show');
                $('#viewMemo_memoNumber').val(memo_no);
                $('#viewMemo_process').val(data.checklist);
                $('#viewMemo_subprocess').val(data.subchecklist);
                $('#viewMemo_checklist_detail').val(data.checklistdetail);
                $('#viewMemo_memo').html(data.parA_TEXT);
            },

            dataType: "json",
        });
    }
    function viewReviewerResponse(ref_p, memo_no, paraId) {
        g_paraRef = ref_p;
        $.ajax({
            url: "/ApiCalls/get_old_para_br_compliance_text",
            type: "POST",
            data: {
                'REF_P': g_paraRef
            },
            cache: false,
            success: function (data) {
                $('#viewMemoModel').modal('show');
                $('#viewMemo_memoNumber').val(memo_no);
                $('#viewMemo_process').val(data.checklist);
                $('#viewMemo_subprocess').val(data.subchecklist);
                $('#viewMemo_checklist_detail').val(data.checklistdetail);
                $('#viewMemo_memo').html(data.parA_TEXT);
            },

            dataType: "json",
        });
    }
    function getLegacyPara() {

        $('#manageObsPanel tbody').empty();
        $.ajax({
            url: "/ApiCalls/get_old_para_br_compliance_recommendation",
            type: "POST",
            data: {

            },
            cache: false,
            success: function (data) {
                g_obsList = data;
                $('#entityNameField').html(data.length > 0 ? data[0].name : '');
                $.each(data, function (index, child) {
                    $('#manageObsPanel tbody').append('<tr id="div_' + child.id + '"><td><p class="fw-normal mb-1">' + child.auditeename + '</p></td><td><p class="fw-normal mb-1">' + child.auditperiod + '</p></td><td><p class="fw-normal mb-1">' + child.parano + '</p></td><td><p  class="fw-normal mb-1">' + child.gistofpara + '</p></td><td><p  class="fw-normal mb-1">' + child.amount + '</p></td><td><p  class="fw-normal mb-1"><a href="#" onclick="viewObservationStatus(' + child.id + ' ,\'' + child.reF_P + '\',\'' + child.parA_CATEGORY + '\' );" class="text-hover text-primary text-center">View</a></p></td></tr>');
                });
            },

            dataType: "json",
        });

    }      

    function viewObservationStatus(id,refP, paraCat, paraInd)
    {
        
        g_paraId = id;
        g_paraRef=refP;
        g_paraCat = paraCat;
        $("#viewMemoModel").modal('show');      
        
    }

    function setParaStatusSettled() {

        $.ajax({
            url: "/ApiCalls/submit_old_para_br_compliance_status",
            type: "POST",
            data: {
                'PARA_ID': g_paraId,
                'REFID': g_paraRef,
                'SETTLE_INDICATOR': 'Y',
                'PARA_CAT': g_paraCat,
                'REMARKS': $('#viewMemo_complianc').val(),
                'NEW_STATUS':6
            },
            cache: false,
            success: function (data) {
                $("#viewMemoModel").modal('hide');
                alert(data.Message);
                onAlertCallback(reloadLocation);
            },
            dataType: "json",
        });

    }

    function setParaStatusUnsettled() {
        $.ajax({
            url: "/ApiCalls/submit_old_para_br_compliance_status",
            type: "POST",
            data: {
                'PARA_ID': g_paraId,
                'REFID': g_paraRef,
                'SETTLE_INDICATOR': 'N',
                'PARA_CAT': g_paraCat,
                'REMARKS': $('#viewMemo_complianc').val(),
                'NEW_STATUS': 8
            },
            cache: false,
            success: function (data) {
                $("#viewMemoModel").modal('hide');
                alert(data.Message);
                onAlertCallback(reloadLocation);
            },
            dataType: "json",
        });
    }
    function setParaStatusPartiallySettle() {
        $.ajax({
            url: "/ApiCalls/submit_old_para_br_compliance_status",
            type: "POST",
            data: {
                'PARA_ID': g_paraId,
                'REFID': g_paraRef,
                'SETTLE_INDICATOR':'P',
                'PARA_CAT': g_paraCat,
                'REMARKS': $('#viewMemo_complianc').val(),
                'NEW_STATUS': 8
            },
            cache: false,
            success: function (data) {
                $("#viewMemoModel").modal('hide');
                alert(data.Message);
                onAlertCallback(reloadLocation);
            },
            dataType: "json",
        });
    }
    function reloadLocation() {
        getLegacyPara();
    }
</script>

<div class="row">
    <div class="col-md-12 mt-3">
        <h3 style=" display:block;color: #45c545;">Old Audit Observations</h3>
     
    </div>
    <div class="row col-md-12 mt-3">
        <table id="manageObsPanel" class="table table-hover table-bordered table-hover mt-3 table-striped">
            <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
                <tr>
                    <th class="col-md-auto">Auditee Name</th>
                    <th class="col-md-auto">Audit Year</th>
                    <th class="col-md-auto">Para No.</th>
                    <th class="col-md-auto">Observation</th>
                    <th class="col-md-auto">Amount</th>
                    <th class="col-md-auto text-center">Compliance</th>
                </tr>
            </thead>
            <tbody></tbody>

        </table>
    </div>

</div>


<div id="viewMemoModel" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Remarks</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
           
            <div class="mt-3 modal-body">
                <form>

                    <div class="row col-md-12">

                        <label class="font-weight-bold">Process</label>
                        <input class="form-control" id="processField" disabled="disabled" />


                    </div>
                    <div class="row mt-3 col-md-12">

                        <label class="font-weight-bold">Sub-Process</label>

                        <input class="form-control" id="subprocessField" disabled="disabled" />
                    </div>

                    <div class="row mt-3 col-md-12">

                        <label class="font-weight-bold">Checklist Details </label>
                        <textarea class="form-control" id="checklistDetailField" disabled="disabled"></textarea>
                    </div>

                    <div class="row mt-3 col-md-12">
                        <label class="font-weight-bold">Observation</label>

                    </div>
                    <div class="row mt-3 col-md-12">
                        <div id="para" class="col-md-12"></div>

                    </div>

                    <div class="form-group mt-3">
                        <label for="viewMemo_respPP" class="font-weight-bold">Responsible Personals</label>
                        <div class="col-md-12 pl-0 pr-0">
                            <table id="listofRespPersons" class="table table-hover table-bordered table-hover mt-3 table-striped">
                                <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
                                    <tr>
                                        <th class="col-md- auto font-weight-bold">Sr.No</th>
                                        <th class="col-md- auto font-weight-bold">P.P. No</th>
                                        <th class="col-md- auto font-weight-bold">Name</th>
                                        <th class="col-md- auto font-weight-bold">Loan Case</th>
                                        <th class="col-md- auto font-weight-bold">LC Amount</th>
                                        <th class="col-md- auto font-weight-bold">Account No.</th>
                                        <th class="col-md- auto font-weight-bold">ACC Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <hr />
                    <h5 class="text-center"><b>Branch Compliance</b></h5>
                    <hr />
                    <div class="form-group mt-3">
                        <label for="viewMemo_compliance">Compliance</label>
                        <div class="col-md-12" id="viewMemo_compliance"></div>
                    </div>
                    <div class="form-group mt-3">
                        <label for="viewMemo_evidences">Evidences</label>
                        <div class="col-md-12 row" id="viewMemo_evidences"></div>
                    </div>
                    <div class="row mt-3 col-md-12">
                        <label class="font-weight-bold">Zonal Manager Remarks</label>
                        <textarea class="form-control" disabled="disabled"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="viewMemo_compliance">In-charge Implementation Remarks</label>
                        <textarea class="form-control" id="viewMemo_complianc"></textarea>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button id="submitPartialSettleViewModel" type="button" class="btn btn-primary">Partial Settle</button>
                <button id="submitSettleViewModel" type="button" class="btn btn-success">Settle</button>
                <button id="submitUnsettleViewModel" type="button" class="btn btn-danger">Unsettle</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>




