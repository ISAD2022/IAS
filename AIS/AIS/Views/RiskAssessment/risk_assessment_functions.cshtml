@{
    ViewData["Title"] = "Risk Assessment Functions";
    Layout = "_Layout";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
</script>
<script type="text/javascript">
    
    

    function myChart()
{

    var xValues = ["ISAD", "CAD", "FAD", "Inspection", "Risk"];
    var yValues = [55, 49, 44, 24, 15];
    var barColors = ["red", "green", "blue", "orange", "brown"];

    new Chart("myChart", {
        type: "pie",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                data: yValues
            }]
        },
        options: {
            title: {
                display: true,
                text: "ZTBL Audit Universe"
            }
        }
    });

    }
    $(document).ready(function () {
        myChart();
    });


    function myChartbar() {

       var xValues = ["ISAD", "CAD", "FAD", "Inspection", "Risk"];
        var yValues = [55, 49, 44, 24, 35];
        var barColors = ["red", "pink", "blue", "yellow", "black"];

        new Chart("myChartbar", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "ZTBL Audit Universe"
                }
            }
        });

    }
    $(document).ready(function () {
        myChartbar();
    });


    
</script>
<style>
    .canvas {
        display: inline-block;
    }

</style>

<div class="col-md-12 mt-5" >
    
     
    <canvas id="myChart" class="col-md-6" width="500" height="400" style="display:inline-block"></canvas>



    <canvas id="myChartbar" class="col-md-5" width="500"  height="400" style="display:inline-block" ></canvas>



</div>
