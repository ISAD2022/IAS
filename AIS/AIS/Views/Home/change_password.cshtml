@{
    ViewData["Title"] = "Change Password";

}


<div class="text-center">

    <!-- Section: Design Block -->
    <section class="text-center">
        <!-- Background image -->
        <div class="p-5 bg-image bg-gradient" style="height: 350px; background: linear-gradient(160deg, hsl(98deg 97% 46%), #0002f3bf);">
            <img style="height: 226px;" src="~/Images/ztbllogo.png" />
        </div>
        <!-- Background image -->

        <div class="card mx-5 mx-md-5 shadow-5-strong" style="margin-top: -50px; backdrop-filter: blur(30px); background: linear-gradient(160deg, #0002f3bf, hsl(98deg 97% 46%)); ">
            <div class="card-body py-4 px-md-4">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-6">
                        <h2 class="fw-bold mb-5" style="color:white">Audit & Inspection Solution</h2>
                        <form action="/Login/DoLogin" method="post">
                            <!--<small class="font-weight-bold text-danger">Incorrect UserName or Password</small>-->
                            <!-- Old Password input -->
                            <div class="form-outline mb-4">
                                <input required type="password" width="200" placeholder="Old Password" id="inputPassword" name="Old Password" class="form-control" />
                            </div>

                            <!-- New Password -->
                            <div class="form-outline mb-4">
                                <input required type="password" placeholder="New Password" id="inputPPNoField" name="New Password" class="form-control" />
                            </div>

                            <!-- Confirm Password -->
                            <div class="form-outline mb-4">
                                <input required type="password" placeholder="Confirm Password" id="inputPPNoField" name="Confirm Password" class="form-control" />
                            </div>

                            <!-- Submit button -->
                            <button id="submitLoginButton" type="submit" class="btn btn-block mb-4" style="background: #dcde8b; " onclick="doLoginSubmit();">
                                Submit
                            </button>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Design Block -->

</div>
<div class="modal" id="loginerrormodal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title">Invalid Login Credentials</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Please Enter Valid P.P. Number & Password</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
