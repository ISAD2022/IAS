@{
    ViewData["Title"] = "Dashboard ~ Functional Responsibility Wise Analysis";
    Layout = "_Layout";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#violationListPanel').hide();
        $('#subviolationListPanel').hide();
    });

    function setupViolationPanel() {
        if ($('#functionalGroupSelectBox').val() != 0) {
            $('#violationListPanel').show();
            $('#processSelectBox').empty();
            $('#processSelectBox').append('<option value=0>--Select Violation Area---</option>');

            $('#subprocessSelectBox').empty();
            $('#subprocessSelectBox').append('<option value=0>--Select Sub Violation Area---</option>');


            $.ajax({
                url: g_asiBaseURL + "/ApiCalls/get_violation_area_for_functional_responsibility_wise_paras",
                type: "POST",
                data: {
                    'FUNCTIONAL_ENTITY_ID': $('#functionalGroupSelectBox option:selected').val()
                },
                cache: false,
                success: function (data) {
                   
                    $.each(data, function (i, v) {
                        $('#processSelectBox').append('<option value="' + v.p_ID + '">' + v.p_NAME + '</option>');
                      
                    });
                },
                dataType: "json",
            });

        } else {
            $('#violationListPanel').hide();
            $('#processSelectBox').empty();
            $('#processSelectBox').append('<option value=0>--Select Violation Area---</option>');

            $('#subviolationListPanel').hide();
            $('#subprocessSelectBox').empty();
            $('#subprocessSelectBox').append('<option value=0>--Select Sub Violation Area---</option>');
        }
    }
    function setupSubViolationPanel() {
        if ($('#processSelectBox').val() != 0) {
            $('#subviolationListPanel').show();
            $('#subprocessSelectBox').empty();
            $('#subprocessSelectBox').append('<option value=0>--Select Sub Violation Area---</option>');
            $.ajax({
                url: g_asiBaseURL + "/ApiCalls/get_sub_violation_area_for_functional_responsibility_wise_paras",
                type: "POST",
                data: {
                    'FUNCTIONAL_ENTITY_ID': $('#functionalGroupSelectBox option:selected').val(),
                    'PROCESS_ID': $('#processSelectBox option:selected').val()
                },
                cache: false,
                success: function (data) {

                    $.each(data, function (i, v) {
                        $('#subprocessSelectBox').append('<option value="' + v.p_ID + '">' + v.p_NAME + '</option>');

                    });
                },
                dataType: "json",
            });

        } else {
            $('#subviolationListPanel').hide();
            $('#subprocessSelectBox').empty();
            $('#subprocessSelectBox').append('<option value=0>--Select Violation Area---</option>');
        }
    }

    function getEntityObservation() {

        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/get_functional_responsibility_wise_paras_for_dashboard",
            type: "POST",
            data: {
                'FUNCTIONAL_ENTITY_ID': $('#functionalGroupSelectBox option:selected').val(),
                'PROCESS_ID': $('#processSelectBox option:selected').val(),
                'SUB_PROCESS_ID': $('#subprocessSelectBox option:selected').val()
            },
            cache: false,
            success: function (data) {
                g_obsList = data;
                $('#observation_panel tbody').empty();
                var sr = 1;
                var t_tparas = 0;
                var t_sparas = 0;
                var t_uparas = 0;
                var t_rparas = 0;
                var t_hparas = 0;
                var t_mparas = 0;
                var t_lparas = 0;
                $.each(data, function (i, v) {
                    t_tparas += parseInt(v.total_Paras);
                    t_sparas += parseInt(v.setteled_Para);
                    t_uparas += parseInt(v.unsetteled_Para);
                    t_rparas += parseFloat(v.ratio);
                    t_hparas += parseInt(v.r1);
                    t_mparas += parseInt(v.r2);
                    t_lparas += parseInt(v.r3);
                    t_rparas = parseFloat(t_rparas).toFixed(2);
                    $('#observation_panel tbody').append('  <tr id="' + v.id + '"><td align="center"> ' + sr + '</td> <td align="left">' + v.process + '</td> <td align="right">' + v.total_Paras + '</td> <td align="right">' + v.setteled_Para + '</td> <td align="right">' + v.unsetteled_Para + '</td> <td align="right">' + parseFloat(v.ratio).toFixed(2) + '%</td><td align="right" style="background-color: #ff968f;">' + v.r1 + '</td> <td align="right" style="background-color:#f9e10a6b;">' + v.r2 + '</td> <td align="right" style="background-color:#82f386;">' + v.r3 + '</td><td class="actionsCol"><a href=\"#\" onclick="event.preventDefault();getParaViewerDetails(' + v.d_ID + ');">View Detail</a></td><td class="actionsCol"><a  href=\"#\" onclick="getParaSummaryDetails(' + v.d_ID + ');">View Summary</a></td></tr>');
                    sr++;
                });
                var finalRatio = (parseFloat(t_sparas / t_tparas) * 100).toFixed(2);

                $('#observation_panel tbody').append('<tr><td colspan="2" align="right">Total</td><td align="right">' + t_tparas + '</td><td align="right">' + t_sparas + '</td><td align="right">' + t_uparas + '</td><td align="right">' + finalRatio + '%</td><td align="right">' + t_hparas + '</td><td align="right">' + t_mparas + '</td><td align="right">' + t_lparas + '</td><td class="actionsCol"></td><td class="actionsCol"></td></tr>');

                if ($('#subprocessSelectBox option:selected').val() == "0") {
                    $('.actionsCol').hide();
                }
                else {
                    $('.actionsCol').show();
                }

            },
            dataType: "json",
        });
    }
  
    function getParaText(id, pc) {
        $('#paraTextViewerModel').modal("show");
        $('#paraTextDivField').empty();

        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/get_functional_observation_text",
            type: "POST",
            data: {
                'PARA_ID': id,
                'PARA_CATEGORY': pc
            },
            cache: false,
            success: function (data) {
                $('#paraTextDivField').html(data);
            }
        });
    }

    function getParaViewerDetails(id) {
        $('#paraViewerModel').modal('show');
        $('#entitywise_panel tbody').empty();
        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/get_functional_resp_detail_paras",
            type: "POST",
            data: {
                'PROCESS_ID': id
            },
            cache: false,
            success: function (data) {
                var sr = 1;

                $.each(data, function (index, item) {

                    $('#entitywise_panel tbody').append("<tr><td>" + sr + "</td><td>" + item.name + "</td><td>" + item.audiT_PERIOD + "</td> <td class=\"text-right\">" + item.parA_NO + "</td><td><a href=\"#\" onclick=\"getParaText(" + item.id + ", '" + item.parA_CATEGORY + "');\">View Para Text</a></td></tr>");
                    sr++;
                });


            },
            dataType: "json",
        });
    }

    function getParaSummaryDetails(id) {
        $('#paraSummaryModel').modal('show');
        $('#summarywise_panel tbody').empty();
        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/get_functional_resp_summary_paras",
            type: "POST",
            data: {
                'PROCESS_ID': id
            },
            cache: false,
            success: function (data) {
                var sr = 1;

                $.each(data, function (index, item) {

                    $('#summarywise_panel tbody').append("<tr><td>" + sr + "</td><td>" + item.p_NAME + "</td><td>" + item.audiT_PERIOD + "</td> <td class=\"text-right\">" + item.parA_NO + "</td></tr>");
                    sr++;
                });


            },
            dataType: "json",
        });
    }

  
</script>
<div class="row col-md-12">
    <div class="col-md-12">
        <h3 style="color: #45c545;">Functional Responsibilities Wise Analysis</h3>
        <h6 style="color: #45c545;">(On the Basis of observations raised at Branches)</h6>
    </div>
    <div class="col-md-12 mt-3">
        <div class="col-md-2 row">
            <label class="text-bold"><b>Functional Area</b></label>
        </div>
        <select id="functionalGroupSelectBox" onchange="setupViolationPanel();" class="form-select form-control" aria-label="Default select example">
            <option value="0" id="0" selected="selected">--Select Functional Category--</option>
            @{
                if (ViewData["FunctionalList"] != null)
                {
                    foreach (var item in (dynamic)(ViewData["FunctionalList"]))
                    {
                                        <option id="@item.P_ID" value="@item.P_ID">@item.P_NAME</option>
                    }
                }
            }
        </select>
    </div>
    <div id="violationListPanel" class="col-md-12 mt-3">   
        <div class="col-md-2 row">
            <label class="text-bold"><b>Violation Area</b></label>
        </div>
        <select id="processSelectBox" onchange="setupSubViolationPanel();" class="form-select form-control" aria-label="Default select example">
        </select>
    </div>
    <div id="subviolationListPanel" class="col-md-12 mt-3">
        <div class="col-md-2 row">
            <label class="text-bold"><b>Sub Violation Area</b></label>
        </div>
        <select id="subprocessSelectBox" class="form-select form-control" aria-label="Default select example">
        </select>
    </div>
    <div class="col-md-12 mt-3">
        <button onclick="getEntityObservation();" class="btn btn-primary">Search Para</button>
    </div>

    <div class="mt-3 col-md-12">
        <table id="observation_panel" class="table table-hover table-bordered table-hover mt-3 table-striped">
            <thead style="background-color: rgb(0 148 219) !important;">
                <tr>
                    <th class="col-md-auto">Sr. No.</th>
                    <th class="col-md-auto">Functional Responsibility</th>
                    <th class="col-md-auto text-center">Total Paras</th>
                    <th class="col-md-auto text-center">Close</th>
                    <th class="col-md-auto text-center">Open</th>
                    <th class="col-md-auto text-center">Settlement Ratio</th>
                    <th class="col-md-auto text-center">High</th>
                    <th class="col-md-auto text-center">Medium</th>
                    <th class="col-md-auto text-center">Low</th>
                    <th class="col-md-auto text-center text-light actionsCol"></th>
                    <th class="col-md-auto text-center text-light actionsCol"></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

</div>


