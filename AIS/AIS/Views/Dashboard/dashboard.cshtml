                background: #fff
            }

        .widget-chart .widget-chart-actions {
            position: absolute;
            right: .5rem;
            top: .5rem;
            z-index: 12
        }

            .widget-chart .widget-chart-actions .btn-link {
                font-size: 1.1rem;
                padding-top: 0;
                padding-bottom: 0;
                opacity: .6
            }

        .widget-chart .widget-progress-wrapper {
            margin-top: 1rem
        }

