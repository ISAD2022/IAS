    .progress {
        width: 90px;
        height: 90px !important;
        float: right;
        left: -4px;
        top: -24px;
        line-height: 80px;
        background: none;
        margin: 10px;
        box-shadow: none;
        position: relative;
    }

        .progress:after {
            content: "";
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 12px solid #fff;
            position: absolute;
            top: 0;
            left: 0;
        }

        .progress > span {
            width: 50%;
            height: 100%;
            overflow: hidden;
            position: absolute;
            top: 0;
            z-index: 1;
        }

        .progress .progress-left {
            left: 0;
            margin-left: 1px;
            margin-top: 0.3px !important;
        }

        .progress .progress-bar {
            width: 100%;
            height: 100%;
            background: none;
            border-width: 12px;
            border-style: solid;
            position: absolute;
            top: 0;
        }

        .progress .progress-left .progress-bar {
            left: 100%;
            border-top-right-radius: 80px;
            border-bottom-right-radius: 80px;
            border-left: 0;
            -webkit-transform-origin: center left;
            transform-origin: center left;
        }

        .progress .progress-right {
            right: 0;
        }

            .progress .progress-right .progress-bar {
                left: -100%;
                border-top-left-radius: 80px;
                border-bottom-left-radius: 80px;
                border-right: 0;
                -webkit-transform-origin: center right;
                transform-origin: center right;
            }

        .progress .progress-value {
            width: 90%;
            height: 90%;
            border-radius: 50%;
            background: #fff;
            font-size: 22px;
            color: #000;
            line-height: 100px;
            text-align: center;
            position: absolute;
            top: -4%;
            left: 2%;
        }

        .progress.blue .progress-bar {
            border-color: #6c757d !important;
        }

        .progress.red .progress-right .progress-bar {
            animation: loading-1 1.0s linear forwards !important;
        }

        .progress.red .progress-left .progress-bar {
            animation: loading-2 2.5s linear forwards;
        }

        .progress.yellow .progress-right .progress-bar {
            animation: loading-3 1.0s linear forwards !important;
        }

        .progress.yellow .progress-left .progress-bar {
            animation: loading-3b 2.5s linear forwards !important;
        }

        .progress.blue .progress-right .progress-bar {
            animation: loading-4 1.8s linear forwards !important;
        }

        .progress.blue .progress-left .progress-bar {
            animation: loading-4b 1.8s linear forwards !important;
        }

        .progress.sky .progress-right .progress-bar {
            animation: loading-5 1.8s linear forwards !important;
        }

        .progress.sky .progress-left .progress-bar {
            animation: loading-5b 1.8s linear forwards !important;
        }

        .progress.green .progress-right .progress-bar {
            animation: loading-6 1.8s linear forwards !important;
        }

        .progress.green .progress-left .progress-bar {
            animation: loading-6b 1.8s linear forwards !important;
        }

        .progress.red .progress-bar {
            border-color: #dc3545 !important
        }

        .progress.yellow .progress-bar {
            border-color: #ffc107 !important;
        }

        .progress.green .progress-bar {
            border-color: #28a745 !important;
        }

        .progress.sky .progress-bar {
            border-color: #17a2b8 !important;
        }

</style>

<script type="text/javascript">

    $(document).ready(function () {

        getAuditScoreCard();
    });


    function getAuditScoreCard() {

        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/get_audit_performance_chart_for_dashboard",
            type: "POST",
            data: {
            },
            cache: false,
            success: function (data) {

                $('#headingSpanField').html(data[0].heading);
                $.each(data, function (i, v) {
                    $($('div.widget-title')[i]).html(v.department);
                    if (v.totaL_ENTITIES != "" && v.nO_OF_ENTITIES != "")
                        $($('span.ent_count_filed')[i]).html(v.nO_OF_ENTITIES + "/" + v.totaL_ENTITIES);

                    if (v.remarks != "")
                        $($('small.remarks_field_span')[i]).html(v.remarks);

                    $($('div.progress-value')[i]).html(v.percentage);

                });

            },
            dataType: "json",
        });
    }


</script>
