            }

        .widget-chart.widget-chart-left {
            padding-bottom: 15%
        }

        .widget-chart .chart-wrapper-relative {
            position: relative;
            opacity: 1;
            margin-top: 1rem
        }

    .widget-chart-actions {
        position: absolute;
        right: 1rem;
