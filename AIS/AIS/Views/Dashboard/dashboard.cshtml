                position: absolute;
                left: 0;
                bottom: 0;
                width: 100%
            }

                .widget-chart .widget-progress-wrapper.progress-wrapper-bottom .progress {
                    margin: 0 -1px -1px
                }

                .widget-chart .widget-progress-wrapper.progress-wrapper-bottom .progress {
                    border-top-left-radius: 0;
                    border-top-right-radius: 0;
                    border-bottom-right-radius: .25rem;
                    border-bottom-left-radius: .25rem
