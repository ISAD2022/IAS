                <tr>
                    <th class="col-md-auto">Sr No.</th>
                    <th class="col-md-auto">Memo No.</th>
                    <th class="col-md-auto">Subject</th>
                    <th class="col-md-auto">Remarks</th>
                    <th class="col-md-auto">Actionables</th>
                    <th class="col-md-auto">Summary</th>
                    

                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

   

</div>

