@{
    ViewData["Title"] = "BAC Agenda Creation";
    Layout = "_Layout";
}

<script type="text/javascript">

    $(document).ready(function () {

      
    });

   

    function getBACAgenda() {

        $('#manageBACAgendaPanels tbody').empty();
        $.ajax({
            url: "/ApiCalls/get_bac_agenda",
            type: "POST",
            data: {
                'MEETING_NO': $('#meetingNoInputBox').val(),
            },
            cache: false,
            success: function (data) {
                var sr = 1;
                $.each(data, function (index, v) {
                    $('#manageBACAgendaPanels tbody').append("<tr><td>" + sr + "</td><td>" + v.memO_NO + "</td><td>" + v.subject + "</td><td>" + v.remarks + "</td><td class=\"text-center\"><a class=\"text-center\" href=\"#\" onclick=\"getBACActionables();\">View</a></td><td class=\"text-center\"><a class=\"text-center\" href=\"#\" onclick=\"getBACSummary();\">View</a></td></tr>");
                    sr++;
                });

            },
            dataType: "json",
        });
    }

    function getBACActionables() {

        window.location.href = "/BAC/MOM";

    }
    function getBACSummary() {
        $('#bac_summary').modal('show');
      
    }
</script>
<div class="row col-md-12 mt-3">

    <h3 style="color: #45c545;">BAC Agenda Creation</h3>
</div>
    <div class="row col-md-12 mt-4">
   
            <label class="font-weight-bold">BAC Meeting Number</label>
    <input id="meetingNoInputBox" style="max-height:150px; height:auto;" class="form-control" />

    
        
    </div>
<div class="row col-md-12 mt-3">
    <button onclick="getBACAgenda();" type="button" class="btn btn-success col-md-4 offset-md-8">Search</button>
</div>

    <div class="row col-md-12 mt-3">
        <table id="manageBACAgendaPanels" class="table table-hover table-bordered table-hover mt-3 table-striped">
