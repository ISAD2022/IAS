        background-color: #ffc107a1 !important;
    }

    .chk_success {
        background-color: #28a745e0 !important;
    }

    .form-check-custom-primary{
        accent-color: #445ec3;
    }

    .form-check-custom-danger {
        accent-color: #dc35459c;
    }

