<script>

    $(document).ready(function () {
        $('#manageBACAgendaPanels').hide();
        getBACActionablesConsolidatedSummary();
        getBACActionablesSummary();
    });

    function getBACActionablesConsolidatedSummary() {
      
        $.ajax({
            url: "/ApiCalls/get_bac_agenda_actionables_consolidate_summary",
            type: "POST",
            data: {
            },
            cache: false,
            success: function (data) {
                var data = data[0];
                $('#manageBACAgendaConsolidatedPanels #allCountSummary').html(data.total);
                $('#manageBACAgendaConsolidatedPanels #compCountSummary').html(data.completed);
                $('#manageBACAgendaConsolidatedPanels #inprocCountSummary').html(data.uN_COMPLETED);
                var percentage = ((parseFloat(data.completed) / parseFloat(data.total)) * 100).toFixed(2);
                var style_bg = "";
                if (percentage < 50)
                    style_bg = "chk_danger";
                if (percentage > 49 && percentage < 70)
                    style_bg = "chk_warning";
                if (percentage > 69)
                    style_bg = "chk_success";
                $('#manageBACAgendaConsolidatedPanels #percentageSummary').html(percentage + "%");
                $('#manageBACAgendaConsolidatedPanels #percentageSummary').addClass(style_bg);
            },
            dataType: "json",
        });
    }
    function getBACActionablesSummary() {
        $('#manageBACAgendaSummaryPanels tbody').empty();
       

        $.ajax({
            url: "/ApiCalls/get_bac_agenda_actionables_summary",
            type: "POST",
            data: {
            },
            cache: false,
            success: function (data) {
                var sr = 1;
                var rowsCount = 1;
                var compSum = 0;
                var incompSum = 0;
                var allcompSum = 0;
                $.each(data, function (index, v) {
                    var percentage = ((parseFloat(v.completed) / parseFloat(v.total)) * 100).toFixed(2);
                    var style_bg = "";
                    if (percentage < 50) 
                        style_bg = "chk_danger";
                    if (percentage > 49 && percentage < 70)
                        style_bg = "chk_warning";
                    if (percentage > 69)
                        style_bg = "chk_success";
                    
                    $('#manageBACAgendaSummaryPanels tbody').append("<tr><td class=\"text-center\">" + sr + "</td><td class=\"text-center\">" + v.meetinG_NO + "</td><td class=\"text-right\">" + v.total + "</td><td class=\"text-right\">" + v.completed + "</td><td class=\"text-right\">" + v.uN_COMPLETED + "</td><td class=\" text-center " + style_bg + "\" >" + percentage + " %</td><td class=\" text-left\" >" + v.reference + "</td><td class=\" text-left\" >" + v.responsibles + "</td><td class=\" text-left\" >" + v.managemenT_RESPONSE + "</td><td class=\" text-left\" >" + v.ciA_REMARKS + "</td><td class=\"text-center\"><label class= \"form-check-custom-primary\" ><input onclick=\"getBACActionables('all');\" type=\"radio\" name = \"radio-23\" ><span></span></label></td><td class=\"text-center\"><label class=\"form-check-custom-success\"><input type=\"radio\" onclick=\"getBACActionables('Completed');\" name =\"radio-23\"><span></span></label></td><td class=\"text-center\"><label class=\"form-check-custom-danger\"><input type=\"radio\" name =\"radio-23\" onclick=\"getBACActionables('Uncompleted');\"><span></span></label></td></tr> ");
                    rowsCount++;
                    compSum += parseInt(v.completed);
                    incompSum += parseInt(v.uN_COMPLETED);
                    allcompSum += parseInt(v.total);
                    sr++;
                });

                var percentageAll = ((parseFloat(compSum) / parseFloat(allcompSum)) * 100).toFixed(2);
                var style_bg = "";
                if (percentageAll < 50)
                    style_bg = "chk_danger";
                if (percentageAll > 49 && percentageAll < 70)
                    style_bg = "chk_warning";
                if (percentageAll > 69)
                    style_bg = "chk_success";

                $('#manageBACAgendaSummaryPanels tbody').append("<tr><td colspan=\"2\" class=\"text-center\">Total</td><td class=\"text-right\">" + allcompSum + "</td><td class=\"text-right\">" + compSum + "</td><td class=\"text-right\">" + incompSum + "</td><td class=\" text-center " + style_bg + " \" >" + percentageAll + " %</td><td colspan=\"4\"></td><td class=\"text-center\"><label class= \"form-check-custom-primary\" ><input onclick=\"getBACActionables('all');\" type=\"radio\" name = \"radio-23\" ><span></span></label></td><td class=\"text-center\"><label class=\"form-check-custom-success\"><input type=\"radio\" onclick=\"getBACActionables('Completed');\" name =\"radio-23\"><span></span></label></td><td class=\"text-center\"><label class=\"form-check-custom-danger\"><input type=\"radio\" name =\"radio-23\" onclick=\"getBACActionables('Uncompleted');\"><span></span></label></td></tr> ");

            },
            dataType: "json",
        });
    }
    function getBACActionables(status) {
        $('#manageBACAgendaPanels').show();
        $('#manageBACAgendaPanels tbody').empty();
        setTimeout(function () {
            var rowpos = $('#manageBACAgendaSummaryPanels tr:last').position();
            $('html').animate({ scrollTop: rowpos.top + 200 });
            
        }, 200);
        $.ajax({
            url: "/ApiCalls/get_bac_agenda_actionables",
            type: "POST",
            data: {
               STATUS:status
            },
            cache: false,
            success: function (data) {
                var sr = 1;
                $.each(data, function (index, v) {
                    $('#manageBACAgendaPanels tbody').append("<tr><td>" + sr + "</td><td>" + v.meetinG_NO + "</td><td>" + v.iteM_HEADING + "</td><td>" + v.baC_DIRECTION + "</td><td>" + v.assigN_TO + "</td><td>" + v.timeline + "</td><td>" + v.duE_DATE + "</td><td>" + v.delay + "</td><td>" + v.status + "</td><td class=\"text-center\"><a class=\"text-center\" href=\"#\" onclick=\"getActionableMeeting();\">View</a></td><td class=\"text-center\"><a class=\"text-center\" href=\"#\" onclick=\"getActionableSummary();\">View</a></td></tr>");
                    sr++;
                });

            },
            dataType: "json",
        });
    }

    function getActionableSummary() {
        $('#bac_summary').modal('show');
    }
    function getActionableMeeting() {
        $('#bac_meeting').modal('show');
    }
</script>
