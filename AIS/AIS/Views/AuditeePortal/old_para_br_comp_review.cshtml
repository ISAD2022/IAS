@{
    ViewData["Title"] = "Old Paras Branch Compliance Review";
    Layout = "_Layout";
}
<script>
    var g_paraId = 0;
    var g_parentId = 0;
    var g_obsId = 0;
    var g_paraCAT = "";
    var g_repliedDate = "";
    var g_ID = 0;
    var g_obsList = [];
    $(document).ready(function () {
        getbranchcompreview();

        $('#responseAuditee').richText({
            imageUpload: false,
            fileUpload: false,
            videoEmbed: false,
            urls: false
        });
      //  $('#PublishParaText').on('click', function () {
       //     publishResponseChanges();
        //});
    });
    function getbranchcompreview() {
        
        $('#managereviewPanel tbody').empty();
        $.ajax({
            url: "/ApiCalls/get_branch_comp_review",
            type: "POST",
            data: {
                
            },
            cache: false,
            success: function (data) {
                g_obsList = data;
                $.each(data, function (index, child) {
                    $('#managereviewPanel tbody').append('<tr id="div_' + child.id + '"><td><p class="fw-normal mb-1">' + child.auditeename + '</p></td><td><p class="fw-normal mb-1">' + child.audiT_PERIOD + '</p></td><td><p class="fw-normal mb-1">' + child.parA_NO + '</p></td><td><p class="fw-normal mb-1">' + child.gistofpara + '</p></td><td><p class="fw-normal mb-1">' + child.amounT_INVOLVED + '</p></td><td class="text-center"><a href="#" onclick="getparatext(\'' + child.reF_P + '\', ' + child.id + ', \'' + child.parA_CATEGORY + '\', \'' + child.replY_DATE + '\', \'' + child.parenT_ID + '\', \'' + child.obS_ID + '\');" class="text-hover text-danger mr-5px"><small>Add Reviewer Response</small></a></td></tr>')
                });
                
            },

            dataType: "json",
        });

    }

    function getparatext(refp, id, paraCat, replyDate, parentId, obsId) {
        g_ID = id;
        g_paraCAT = paraCat;
        g_paraId = refp;
        g_repliedDate = replyDate;
        g_parentId = parentId;
        g_obsId = obsId;
        $('#reviewer_response').modal("show");
        $('#ReviewerRemarks').empty();

        $.ajax({
            url: "/ApiCalls/get_old_para_zone_compliance_text",
            type: "POST",
            data: {
                'REF_P': refp,
                'PARA_CATEGORY': g_paraCAT,
                'REPLY_DATE': g_repliedDate,
                'OBS_ID':g_obsId                
            },
            cache: false,
            success: function (data) {
                $('#para').html(data.parA_TEXT);
                $('#processField').val(data.checklist);
                $('#subprocessField').val(data.subchecklist);
                $('#checklistDetailField').val(data.checklistdetail);
                $('#viewMemo_compliance').html(data.reply);
                $('#listofRespPersons tbody').empty();
                
                if (data.responsiblE_PPs.length > 0) {
                    $.each(data.responsiblE_PPs, function (j, pp) {
                        var srNo = $('#listofRespPersons tbody tr').length;
                        srNo++;
                        $('#listofRespPersons tbody').append('<tr id="tr_' + pp.pP_NO + '"><td>' + srNo + '</td><td>' + pp.pP_NO + '</td><td>' + pp.emP_NAME + '</td><td>' + pp.loaN_CASE + '</td><td>' + pp.lC_AMOUNT + '</td><td>' + pp.accounT_NUMBER + '</td><td>' + pp.acC_AMOUNT + '</td></tr>');
                    });
                }
                $('#viewMemo_evidences').empty();
                if (data.evidences.length > 0) {
                    $.each(data.evidences, function (j, pp) {
                        
                        $('#viewMemo_evidences').append('<div class="col-md-12 row mt-3"><img style="max-height:500px;" src="data:image/png;base64,' + pp.imagE_DATA + '" /></div>');
                    });
                }

            },

            dataType: "json",
        });

    }
    function addreviewerresponse(new_status) {      

        if ($('#ReviewerRemarks').val() =="") {
            alert("Please enter Reply");
            return;
        }
        $.ajax({
            url: "/ApiCalls/AddOldParasComplianceReviewer",
            type: "POST",
            data: {
                'Para_ID': g_paraId,
                'REPLY': $('#ReviewerRemarks').val(),
                'PARA_CAT': g_paraCAT,
                'r_status': new_status,
                'ID': g_ID,
                'PARENT_ID': g_parentId
            },
            cache: false,
            success: function (data) {
                alert(data.Message);
                onAlertCallback(reloadLocation);
            },
            dataType: "json",
           
        });

    }
  
    function reloadLocation() {
        $('#reviewer_response').modal("hide");
        getbranchcompreview();
    }

</script>

<div class="row">
    <div class="col-md-12 mt-3">
        <h3 style=" display:block;color: #45c545;">Post Compliance For Reviewer / Recommender</h3>
    </div>
    <div class="row col-md-12 mt-3">
        <table id="managereviewPanel" class="table table-hover table-bordered table-hover mt-3 table-striped">
            <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
                <tr>

                    <th class="col-md-auto">Entity Name</th>
                    <th class="col-md-auto">Audit Year</th>
                    <th class="col-md-auto">Para No.</th>
                    <th class="col-md-auto">Title / Gist</th>
                    <th class="col-md-auto">Amount</th>
                    <th class="col-md-auto text-center">Action</th>

                </tr>
            </thead>
            <tbody></tbody>
          
        </table>
    </div>

</div>


<div id="reviewer_response" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Sub Process Entry</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="mt-3 modal-body">
                <form>

                    <div class="row col-md-12">

                        <label class="font-weight-bold">Process</label>
                        <input class="form-control" id="processField" disabled="disabled" />


                    </div>
                    <div class="row mt-3 col-md-12">

                        <label class="font-weight-bold">Sub-Process</label>

                        <input class="form-control" id="subprocessField" disabled="disabled" />
                    </div>

                    <div class="row mt-3 col-md-12">

                        <label class="font-weight-bold">Checklist Details </label>
                        <textarea class="form-control" id="checklistDetailField" disabled="disabled" ></textarea>
                    </div>

                    <div class="row mt-3 col-md-12">
                        <label class="font-weight-bold">Para</label>

                    </div>
                    <div class="row mt-3 col-md-12">
                        <div id="para" class="col-md-12"></div>

                    </div>                
                    
                    <div class="form-group mt-3">
                        <label for="viewMemo_respPP" class="font-weight-bold">Responsible Personals</label>
                        <div class="col-md-12 pl-0 pr-0">
                            <table id="listofRespPersons" class="table table-hover table-bordered table-hover mt-3 table-striped">
                                <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
                                    <tr>
                                        <th class="col-md- auto font-weight-bold">Sr.No</th>
                                        <th class="col-md- auto font-weight-bold">P.P. No</th>
                                        <th class="col-md- auto font-weight-bold">Name</th>
                                        <th class="col-md- auto font-weight-bold">Loan Case</th>
                                        <th class="col-md- auto font-weight-bold">LC Amount</th>
                                        <th class="col-md- auto font-weight-bold">Account No.</th>
                                        <th class="col-md- auto font-weight-bold">ACC Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <hr />
                    <h5 class="text-center"><b>Auditee Compliance</b></h5>
                    <hr />
                    <div class="form-group mt-3">
                        <label for="viewMemo_compliance">Compliance</label>
                        <div class="col-md-12" id="viewMemo_compliance"></div>
                    </div>
                    <div class="form-group mt-3">
                        <label for="viewMemo_evidences">Evidences</label>
                        <div class="col-md-12 row" id="viewMemo_evidences"></div>
                    </div>
                    <div class="row mt-3 col-md-12">
                        <label class="font-weight-bold">Add Remarks</label>

                    </div>
                    <div class="row mt-3 col-md-12">
                        <textarea class="form-control" id="ReviewerRemarks"></textarea>

                    </div>


                </form>
            </div>

            <div class="mt-3 modal-footer">
                <button onclick="addreviewerresponse(12);" type="button" class="btn btn-danger" >Reffer Back</button>
                <button  onclick="addreviewerresponse(11);" type="button" class="btn btn-success" >Submit for Settlement</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



