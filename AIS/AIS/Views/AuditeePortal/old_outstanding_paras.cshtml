@{
    ViewData["Title"] = "Old Outstanding Paras";
    Layout = "_Layout";
}
<h3 style=" display:block;color: #45c545;" class="mt-3">@ViewData["Title"]</h3>

<div class="mt-4">
    <table class="table table-hover table-bordered table-hover mt-3 table-striped">
        <thead style="background-color: rgb(181 229 117 / 93%) !important; ">
            <tr>
                <th>Para Number</th>
                <th>Audit Period</th>
                <th>Entity Name</th>
                <th>Entity Type</th>
                <th>Observation</th>
                <th>Auditee Response</th>
                <th>Auditor Response</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @{
               
                if (ViewData["OldParas"] != null)
                {
                    foreach (var item in (dynamic)(ViewData["OldParas"]))
                    {
                        <tr>
                            <td>@item.PARA_NO</td>
                            <td>@item.AUDIT_PERIOD</td>
                            <td>@item.ENTITY_NAME</td>
                            <td>@item.TYPE_DES</td>
                            <td>@item.GIST_OF_PARAS</td>
                            <td>@item.AUDITEE_RESPONSE</td>
                            <td>@item.AUDITOR_REMARKS</td>
                            <td>Unsettled</td>
                            <td>
                                <button type="button" onclick="window.location.href = './Reply_new?entity=+@item.ENTITY_NAME+&period=+@item.AUDIT_PERIOD+&para=+@item.PARA_NO';" class="btn btn-link text-danger btn-sm btn-rounded">
                                    Action
                                </button>
                            </td>

                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>